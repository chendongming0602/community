.ran-top{
    padding: 20rpx;
    position: relative;
}
.ran-bg{
    width: 100%;
    height: 250rpx;
    position: absolute;
    top: 0;
    left: 0;
}
.ran-bar{
    display: block;
    width: 670rpx;
    height: 305rpx;
    border-radius: 10rpx;
    position: relative;
    z-index: 2;
    margin: 0 auto;
}
.item-box{
    padding: 20rpx;
    box-shadow: 0 5px 8px -1px var(--shallow2);
    border-radius: 20rpx 20rpx 10rpx 10rpx;
    margin-top: 30rpx;
}
.list-box{
    padding:0 20rpx 50rpx;
}
.ran-title{
    font-size: 28rpx;
    color: #333;
    line-height: 65rpx;
    padding: 0 15rpx;
    background: var(--shallow);
    border-radius: 8rpx;
    margin-top: 20rpx;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.list-bot{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20rpx;
}
.list-bot>view{
    width: 33%;
    display: flex;
    align-items: center;
    font-size: 20rpx;
    justify-content: center;
    color: #666;
    position: relative;
}
.list-bot image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 8rpx;
}
.ran-xiao image{
    width: 40rpx;
    height: 40rpx;
}
.list-bot .ran-xiao{
    font-size: 22rpx;
}

.ran-count{
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -30rpx 0 0 -30rpx;
    width: 60rpx;
    line-height: 60rpx;
    text-align: center;
    /* background: var(--vip); */
    border-radius: 50%;
    font-weight: bold;
    color: var(--color);
    font-size: 24rpx;
    box-shadow: 0px 0px 8px 2px var(--color) inset;
}
.active-1{
    box-shadow: 0 5px 8px -1px rgba(255,187,32,0.5);
}
@keyframes active-1 {
    0%{
        box-shadow: 0px 0px 15px 2px var(--vip) inset;
    }
    20%{
        box-shadow: 0px 0px 0px 0px var(--vip) inset;
    }
    25%{
        box-shadow: 0px 0px 0px 0px var(--vip);
    }
    60%{
        box-shadow: 0px 0px 15px 2px var(--vip);
    }
    70%{
        box-shadow: 0px 0px 0px 0px var(--vip);
    }
    75%{
        box-shadow: 0px 0px 0px 0px var(--vip) inset;
    }
    100%{
        box-shadow: 0px 0px 15px 2px var(--vip) inset;
    }
}
.active-1 .ran-count{
    margin: -40rpx 0 0 -40rpx;
    width: 80rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    color: var(--vip);
    box-shadow: 0px 0px 12px 2px var(--vip) inset;
    animation: active-1 3s infinite;
}


.active-2{
    box-shadow: 0 5px 8px -1px #d2d2d2;
}
.active-2 .ran-count{
    margin: -35rpx 0 0 -35rpx;
    width: 70rpx;
    line-height: 70rpx;
    font-size: 32rpx;
    color: #d2d2d2;
    box-shadow: 0px 0px 10px 2px #d2d2d2 inset;
}

.active-3{
    box-shadow: 0 5px 8px -1px rgba(177,109,22,0.5);
}
.active-3 .ran-count{
    color: #b16d16;
    box-shadow: 0px 0px 8px 2px #b16d16 inset;
}